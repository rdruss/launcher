{
  "name": "launcher-creator-backend",
  "version": "1.0.0",
  "description": "Root package for the App Creator Backend",
  "repository": "git@github.com:fabric8-launcher/launcher-creator-backend",
  "author": "Tako Schotanus <tschotan@redhat.com>",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "install": "./install.sh",
    "build": "tsc --project .",
    "start": "ts-node ./lib/server.ts",
    "apply": "ts-node ./lib/core/deploy/apply.ts",
    "deploy": "ts-node ./lib/core/deploy/deploy.ts",
    "zip": "ts-node ./lib/core/deploy/zip.ts",
    "lint": "tslint -t verbose --project . && eslint ./lib/capabilities && eslint ./lib/generators",
    "test": "yarn build && ts-node node_modules/tape/bin/tape ./test/**/*.test.ts | tap-spec",
    "watch": "nodemon"
  },
  "dependencies": {
    "archiver": "^3.0.0",
    "body-parser": "^1.18.3",
    "child-process-promise": "^2.2.1",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "fs-extra": "^7.0.0",
    "lodash": "^4.17.10",
    "stream-to-string": "^1.1.0",
    "tmp": "^0.0.33",
    "yaml": "^1.0.0-rc.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/fs-extra": "^5.0.4",
    "@types/lodash": "^4.14.116",
    "@types/tape": "^4.2.32",
    "@types/tmp": "^0.0.33",
    "eslint": "^5.5.0",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "workspaces": [
    "lib/core/*",
    "lib/generators/*",
    "lib/capabilities/*"
  ]
}
