{
  "name": "launcher-creator-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "copy-fonts": "ncp node_modules/patternfly/dist/fonts src/assets/patternfly/fonts",
    "copy-img": "ncp node_modules/patternfly/dist/img src/assets/patternfly/img",
    "build-css": "node-sass-chokidar src/ --output-style compressed $npm_package_sassIncludes_src $npm_package_sassIncludes_patternfly $npm_package_sassIncludes_patternflyReact $npm_package_sassIncludes_bootstrap $npm_package_sassIncludes_fontAwesome -o src/",
    "watch-css": "yarn build-css && node-sass-chokidar src/ --output-style compressed $npm_package_sassIncludes_src $npm_package_sassIncludes_patternfly $npm_package_sassIncludes_patternflyReact $npm_package_sassIncludes_bootstrap $npm_package_sassIncludes_fontAwesome -o src/ --watch --recursive",
    "prettier": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json}\"",
    "lint": "tslint --project ./tsconfig.json",
    "lintfix": "tslint --fix --project ./tsconfig.json",
    "start-js": "react-scripts-ts start",
    "start": "BROWSER=none npm-run-all copy-fonts copy-img -p watch-css start-js",
    "start:mock": "REACT_APP_API_DRIVER=mock npm start",
    "start:api": "REACT_APP_API_DRIVER=api npm start",
    "start:prod": "run-s build serve",
    "serve": "serve -s build",
    "build-js": "react-scripts-ts build",
    "build": "npm-run-all copy-fonts copy-img build-css build-js",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "classnames": "^2.2.6",
    "jssha": "^2.3.1",
    "keycloak-js": "^4.3.0",
    "patternfly": "^3.54.1",
    "patternfly-react": "^2.14.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-scripts-ts": "2.17.0",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.16.0",
    "redux-saga-requests": "^0.17.0",
    "redux-saga-requests-axios": "^0.7.1",
    "redux-saga-requests-mock": "^0.1.0",
    "regenerator-runtime": "^0.12.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.6",
    "@types/enzyme": "^3.1.13",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.9.2",
    "@types/react": "^16.4.11",
    "@types/react-dom": "^16.0.7",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "enzyme-to-json": "^3.3.4",
    "ncp": "^2.0.0",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "serve": "^10.0.0",
    "typescript": "^3.0.1"
  },
  "sassIncludes": {
    "src": "--include-path src",
    "patternflyReact": "--include-path node_modules/patternfly-react/dist/sass",
    "patternfly": "--include-path node_modules/patternfly/dist/sass",
    "bootstrap": "--include-path node_modules/bootstrap-sass/assets/stylesheets",
    "fontAwesome": "--include-path node_modules/font-awesome-sass/assets/stylesheets"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
